<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:visibility="visible"
    tools:context="com.example.ash.smartamravati.activity.Page4">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/tittle"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/profileImage"
                android:layout_marginStart="9dp"
                android:layout_marginTop="13dp"
                android:hint="Tittle"
                android:textAlignment="center"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/firstName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/tittle"
                android:layout_below="@+id/tittle"
                android:layout_marginTop="5dp"
                android:hint="First Name"
                android:textAlignment="center"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/firstName"
                android:layout_below="@+id/firstName"
                android:layout_marginTop="8dp"
                android:text="Gender"
                android:textSize="25sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView12"
                android:layout_alignTop="@+id/textView5"
                android:layout_marginStart="22dp"
                android:layout_marginTop="10dp"
                android:hint="Male"
                android:textSize="25sp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/checkBox2"
                android:layout_below="@+id/checkBox2"
                android:layout_marginTop="14dp"
                android:hint="Female"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/editText13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/checkBox"
                android:layout_marginTop="9dp"
                android:ems="10"
                android:hint="Date Of Birth"
                android:inputType="date"
                android:textSize="25sp" />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/editText13"
                android:layout_below="@+id/editText13"
                android:layout_gravity="center"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textSize="25sp"
                android:id="@+id/editText7" />

            <EditText

                android:layout_marginTop="10dp"
                android:id="@+id/editText6"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/editText7"
                android:layout_below="@+id/editText7"
                android:layout_gravity="center"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textSize="25sp" />

            <EditText

                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/editText6"
                android:layout_below="@+id/editText6"

                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Permanent Address"
                android:inputType="text"
                android:textSize="25sp"
                android:id="@+id/editText8" />

            <EditText

                android:id="@+id/editText5"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/editText8"
                android:layout_below="@+id/editText8"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Pincode"
                android:inputType="number"
                android:textSize="25sp" />

            <CheckBox

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="730dp"
                android:hint="I agree to the terms"
                android:textSize="25sp"
                android:id="@+id/checkBox3" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="780dp"
                android:background="#e2351b"
                android:text="Register Me"
                android:textColor="#fff"
                android:textSize="30dp" />


            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textView11"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="19dp"
                app:srcCompat="@drawable/asd1" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/profileImage"
                android:layout_below="@+id/profileImage"
                android:layout_marginTop="30dp"
                android:text="Choose Profile Image"
                android:textAlignment="center"
                android:textStyle="bold" />

        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
