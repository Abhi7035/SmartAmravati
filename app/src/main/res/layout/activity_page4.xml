<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:visibility="visible"
    tools:context="com.example.ash.smartamravati.activity.Page4">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tittle"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/name"
            android:layout_alignTop="@+id/profileImage"
            android:layout_marginTop="24dp"
            android:hint="Tittle"
            android:inputType="textCapCharacters"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_above="@+id/textView5"
            android:layout_alignStart="@+id/email"
            android:hint="Name"
            android:inputType="text|textPersonName"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/DoBirth"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/pincode"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Date Of Birth"

            android:inputType="date"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/DoBirth"
            android:layout_below="@+id/textView5"
            android:layout_gravity="center"
            android:layout_marginTop="23dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText

            android:id="@+id/mobileNo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/email"
            android:layout_below="@+id/email"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText

            android:id="@+id/address"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/mobileNo"

            android:layout_below="@+id/mobileNo"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Permanent Address"
            android:inputType="textPostalAddress"
            android:textAlignment="center"
            android:textSize="25sp" />

        <EditText

            android:id="@+id/pincode"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/address"
            android:layout_below="@+id/address"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:hint="Pincode"

            android:inputType="number"
            android:textAlignment="center"
            android:textSize="25sp" />

        <CheckBox

            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/DoBirth"
            android:layout_below="@+id/DoBirth"
            android:layout_marginTop="22dp"
            android:buttonTint="@color/btn_logut_bg"
            android:hint="I agree to the terms"
            android:textAlignment="center"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/checkBox"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="43dp"
            android:background="#e2351b"
            android:text="Save"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="30dp" />


        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_marginEnd="9dp"
            android:layout_marginTop="21dp"
            app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profileImage"
            android:layout_below="@+id/profileImage"
            android:layout_marginTop="15dp"
            android:text="Choose Profile Image"
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>


</ScrollView>
