<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.smartamravati.activity.admin.dashboard.ElectedOfficials.DeputyMayorProfile">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/profileImage3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_sentiment_satisfied_black_24dp" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/profileImage3"
                android:fontFamily="cursive"
                android:text="Select Profile Image"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/fromspin"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/tv1"
                android:layout_marginTop="10dp"
                android:entries="@array/Weight" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/fromspin"
                android:layout_marginTop="10dp"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/post"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/email"
                android:layout_below="@+id/name"
                android:hint="Designation"
                android:inputType="text"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textSize="25sp" />

            <EditText

                android:id="@+id/mobileNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/post"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Mobile Number"
                android:inputType="phone"
                android:textAlignment="center"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/mobileNo"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="25sp" />

            <EditText

                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/email"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Address"
                android:inputType="textPostalAddress"
                android:textAlignment="center"
                android:textSize="25sp" />

            <EditText

                android:id="@+id/msg"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/address"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:hint="Message"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_below="@+id/msg"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="#e2351b"
                android:text="Save"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp" />

        </RelativeLayout>


    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="serif-monospace"
            android:text="Deputy Mayor"
            android:textAlignment="center"
            android:textColor="@color/btn_logut_bg"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:text="Profile (setup)"
            android:textAlignment="center"
            android:textSize="18sp" />

    </RelativeLayout>
</RelativeLayout>
