<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ash.smartamravati.activity.user.dashboard.menu.ComplaintsFragment">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:clipToPadding="false" android:gravity="center" android:orientation="vertical" android:paddingBottom="20dp" android:paddingTop="30dp">
            <android.support.v7.widget.CardView android:layout_width="200dp" android:layout_height="200dp" android:layout_margin="50dp" android:paddingTop="10dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:id="@+id/imageView1" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/ic_complaint" />
                    <TextView android:id="@+id/text1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:text="New Complaint" android:textAlignment="center" android:textSize="18sp" android:textStyle="bold" />
                    <View android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="10dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView android:layout_width="200dp" android:layout_height="200dp" android:layout_margin="0dp" android:paddingTop="10dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
                    <ImageView android:id="@+id/imageView2" android:layout_width="100dp" android:layout_height="100dp" android:src="@drawable/ic_complaint" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="My Complaints"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <View android:layout_width="match_parent" android:layout_height="10dp" android:layout_marginTop="10dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
